<Page x:Class="Toy.Pages.AuthPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Toy.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPages">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal">
                <TextBlock>Логин</TextBlock>
                <TextBox Padding="5" x:Name="LoginTb"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal"></StackPanel>
                <TextBlock>Пароль</TextBlock>
                <TextBox Padding="5" x:Name="PasswordTb"></TextBox>
            </StackPanel>
            <Button x:Name="AuthBtn"  Style="{StaticResource MyButton}" Foreground="White" Click="AuthBtn_Click">Вход</Button>
            <Button x:Name="RegistrBtn" Style="{StaticResource MyButton}">Зарегестрироваться</Button>

        </StackPanel>

    </Grid>
</Page>
