<Window x:Class="Toy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="368*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill ="#FFE10024"></Rectangle>
        <Image Source="/Resources/1200px-Toy_Story.svg.png" HorizontalAlignment="Left"></Image>
        <TextBlock x:Name="TitlePage" FontSize="25" HorizontalAlignment="Center" Foreground="#FFFED700">Игрушки</TextBlock>
        <Rectangle Grid.Row="2" Fill ="#FFE10024"></Rectangle>
        <Button x:Name="ExitBtn" Style="{StaticResource NewMyButton}" Content="Выход" HorizontalAlignment="Right" Margin="100 0"/>
        <Button x:Name="ForwardBtn" Style="{StaticResource NewMyButton}" Content="Назад" HorizontalAlignment="Right" Margin=" 10 0"/>
        <Frame x:Name="MyFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
